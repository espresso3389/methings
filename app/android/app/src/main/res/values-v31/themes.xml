<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Methings" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/methings_system_bar</item>
        <item name="android:navigationBarColor">@color/methings_navigation_bar</item>
        <item name="android:windowBackground">@color/methings_bg</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Android 12+ splash screen: dark background, no visible icon. -->
        <item name="android:windowSplashScreenBackground">@color/methings_bg</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
        <!-- AlertDialog style matching the Web UI dark palette. -->
        <item name="alertDialogTheme">@style/Theme.Methings.AlertDialog</item>
    </style>
</resources>
